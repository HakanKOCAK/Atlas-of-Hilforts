<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:contentDescription="image" />
        <TextView
            android:id="@+id/hillfortTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageIcon"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imageIcon"
            android:layout_below="@id/hillfortTitle"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/visited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignBaseline="@id/hillfortTitle"
            android:layout_marginEnd="16dp"
            android:text="Not Visited" />
        <net.steamcrafted.materialiconlib.MaterialIconView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:materialIcon="heart"
            android:layout_alignParentEnd="true"
            app:materialIconSize="24dp"
            android:scaleType="center"
            android:background="#fff"
            android:visibility="gone"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:id="@+id/favorite_icon"
            />

        <net.steamcrafted.materialiconlib.MaterialIconView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:materialIcon="heart_outline"
            android:layout_alignParentEnd="true"
            app:materialIconSize="24dp"
            android:scaleType="center"
            android:background="#fff"
            android:visibility="gone"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="25dp"
            android:id="@+id/not_favorite_icon"
            />

        <net.steamcrafted.materialiconlib.MaterialIconView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:materialIcon="share"
            android:layout_alignParentEnd="true"
            app:materialIconSize="24dp"
            android:scaleType="center"
            android:background="#fff"
            android:visibility="gone"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="25dp"
            android:id="@+id/share_icon"
            />

        <net.steamcrafted.materialiconlib.MaterialIconView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:materialIcon="pencil"
            android:layout_alignParentEnd="true"
            app:materialIconSize="24dp"
            android:scaleType="center"
            android:background="#fff"
            android:visibility="gone"
            android:id="@+id/edit_icon"
            />
        <net.steamcrafted.materialiconlib.MaterialIconView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:materialIcon="delete"
            android:layout_alignParentEnd="true"
            app:materialIconSize="24dp"
            android:scaleType="center"
            android:background="#fff"
            android:id="@+id/delete_icon"
            android:visibility="gone"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>